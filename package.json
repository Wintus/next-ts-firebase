{
  "name": "next-ts-firebase",
  "version": "4.0.1",
  "description": "Host Next.js SSR app on Firebase Cloud Functions with Firebase Hosting redirects.",
  "license": "GPL-3.0",
  "engines": {
    "node": "8"
  },
  "scripts": {
    "dev": "next src/app/",
    "preserve": "run-s predeploy install-deps",
    "serve": "NODE_ENV=production firebase serve",
    "predeploy": "run-s build copy-deps",
    "deploy": "firebase deploy",
    "clean": "rimraf dist/",
    "build-public": "cpx src/public/**/*.* dist/public -C",
    "build-funcs": "babel --extensions .ts src/functions --out-dir dist/functions",
    "build-app": "next build src/app/",
    "build": "run-p build-*",
    "copy-deps": "cpx *{package.json,package-lock.json,yarn.lock} dist/functions -C",
    "install-deps": "yarn --cwd dist/functions"
  },
  "dependencies": {
    "@zeit/next-typescript": "^1.1.0",
    "firebase-admin": "^6.0.0",
    "firebase-functions": "^2.0.0",
    "next": "^7.0.0",
    "react": "^16.5.1",
    "react-dom": "^16.5.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.0",
    "@babel/core": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-typescript": "^7.1.0",
    "@types/next": "^7.0.0",
    "@types/node": "^8.10.0",
    "@types/styled-jsx": "^2.2.5",
    "cpx": "^1.5.0",
    "firebase-tools": "^4.2.1",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2"
  }
}
